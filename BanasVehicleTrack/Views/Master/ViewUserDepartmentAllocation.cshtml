@model BanasVehicleTrackViewModel.Master.UserDepartmentAllocationViewModel
@{
    ViewBag.Title = "ViewUserDepartmentAllocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-12">
                <div class="float-left">
                    <h3><i class="ti-control-forward ForwardIcon"> </i>User Department Allocation</h3>
                </div>
                <div class="float-right">
                    <a class="btn btn-outline-primary btn-round" href="@Url.Action("AddUserDepartmentAllocation","Master")">
                        <i class="fa fa-plus mx-2"></i>Add User Department
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-block">
            <div class="dt-responsive table-responsive">
                <table id="base-style" class="table table-striped table-hover table-bordered nowrap">
                    <thead>
                        <tr>
                            @*<th>
                                @Html.DisplayName("Action")
                            </th>*@
                            <th>
                                @Html.DisplayName("Employee Code")
                            </th>
                            <th>
                                @Html.DisplayName("Employee Name")
                            </th>
                            <th>
                                @Html.DisplayName("Department")
                            </th>
                            <th>
                                @Html.DisplayName("IsActive")
                            </th>
                            <th>
                                @Html.DisplayName("Create Date")
                            </th>
                            <th>
                                @Html.DisplayName("Create User")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserDepartmentMasterList)
                        {
                            <tr>
                                @*<td>
                                    @if (ViewBag.UpdateRight == 1)
                                    {
                                        @Html.ActionLink(" ", "EditUserDepartmentAllocation", new { id = item.UDInteId }, new { @class = "btn editbtn fa fa-pencil-square-o", title = "Edit" })
                                    }
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usercode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    @if (ViewBag.UpdateRight == 1)
                                    {
                                        <label class="toggle">
                                            <input class="toggle-checkbox" type="checkbox" onclick='ActiveDeactiveStatusChange(this,"@item.UDInteId","UserDepartmentAllocation")' @(item.IsActive == true ? "checked" : "")>
                                            <span class="toggle-switch"></span>
                                        </label>
                                    }
                                    else
                                    {
                                        <label class="toggle">
                                            <input class="toggle-checkbox" type="checkbox" disabled="disabled" onclick='ActiveDeactiveStatusChange(this,"@item.UDInteId","UserDepartmentAllocation")' @(item.IsActive == true ? "checked" : "")>
                                            <span class="toggle-switch"></span>
                                        </label>
                                    }
                                </td>
                                <td> @Html.DisplayFor(modelItem => item.CreateDate)</td>
                                <td> @Html.DisplayFor(modelItem => item.CreateUser)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>