@model BanasVehicleTrackViewModel.Master.ShopMasterViewModel
@{
    ViewBag.Title = "Shop Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-12">
                <div class="float-left">
                    <h3><i class="ti-control-forward ForwardIcon"> </i>Shop Master</h3>
                </div>
                <div class="float-right">
                    <a class="btn btn-outline-primary btn-round" href="@Url.Action("AddShopMaster","Master")">
                        <i class="fa fa-plus mx-2"></i>Add Shop
                    </a>
                </div>
            </div>

        </div>
    </div>
    <div class="card">
        <div class="card-block">
            <div class="dt-responsive table-responsive">
                <table id="base-style" class="table table-striped  table-hover table-bordered nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Action")
                            </th>
                            <th>
                                @Html.DisplayName("Department Name")
                            </th>
                            <th>
                                @Html.DisplayName("Shop Name")
                            </th>
                            <th>
                                @Html.DisplayName("Shop Code")
                            </th>
                            <th>
                                @Html.DisplayName("Shop Contact No")
                            </th>
                            <th>
                                @Html.DisplayName("IsActive")
                            </th>
                            <th>
                                @Html.DisplayName("Create Date")
                            </th>
                            <th>
                                @Html.DisplayName("Create User")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ShopList)
                        {
                            <tr>
                                <td>
                                    @if (ViewBag.UpdateRight == 1)
                                    {
                                        @Html.ActionLink(" ", "EditShopMaster", new { id = item.ShopMasterId }, new { @class = " btn editbtn fa fa-pencil-square-o", title = "Edit" })}
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShopName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShopCode)
                                </td> 
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShopContactNo)
                                </td>
                                <td>
                                    <label class="toggle">
                                        <input class="toggle-checkbox" type="checkbox" onclick='ActiveDeactiveStatusChange(this,"@item.ShopMasterId","ShopMaster")' @(item.IsActive == true ? "checked" : "")>
                                        <span class="toggle-switch"></span>
                                    </label>
                                </td>
                                <td> @Html.DisplayFor(modelItem => item.cdate)</td>
                                <td> @Html.DisplayFor(modelItem => item.CreateUser)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>