@model BanasVehicleTrackViewModel.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<link href="~/Content/AdminTemplateAssets/login_content/j-pro-modern.css" rel="stylesheet" />

<style>

    .field-icon {
        float: right;
        margin-top: -31px;
        position: relative;
        right: 57px;
        z-index: 2;
    }
</style>
<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-12">
                <div class="float-left">
                    <h3><i class="ti-control-forward ForwardIcon"> </i>Change Password</h3>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">

                    <div class="card-block">
                        <div class="j-wrapper j-wrapper-640">
                            <form action="@Url.Action("ChangePassword","Home")" method="post" class="j-pro" id="j-pro">
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(m => m.EmployeeCode)
                                @Html.HiddenFor(m => m.CompanyCode)
                                <div class="j-content">
                                    <div>
                                        <label class="j-label">Old Password</label>
                                        <div class="j-unit">
                                            <div class="j-input">
                                                <label class="j-icon-right" for="name">
                                                    <i class="fa fa-lock"></i>
                                                </label>
                                                @*<input type="text" id="name" name="name">*@
                                                @Html.TextBoxFor(m => m.Password, new Dictionary<string, object>
                       () {
                                      {"id","txtUserpwd"},
                                      {"class","form-control"},
                                      {"placeholder","Enter Old Password" },
                                      {"autocomplete","off"},
                                      {"type","password"},
                                      {"required","required"}
                                      })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <div>
                                            <label class="j-label ">New Password</label>
                                        </div>
                                        <div class="j-unit">
                                            <div class="j-input">
                                                <label class="j-icon-right" for="password">
                                                    <i class="fa fa-lock"></i>
                                                </label>
                                                @*<input type="password" id="password" name="password">*@
                                                @Html.TextBoxFor(m => m.NewPassword, new Dictionary<string, object>
                        () {
                                       {"id","txtUserpwd"},
                                       {"class","form-control rounded-left pswd"},
                                       {"placeholder","Enter New Password" },
                                       {"autocomplete","off"},
                                       {"type","password"},
                                       {"required","required"}
                                       })
                                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <div>
                                            <label class="j-label ">New Password</label>
                                        </div>
                                        <div class="j-unit">
                                            <div class="j-input">
                                                <label class="j-icon-right" for="password">
                                                    <i class="fa fa-lock"></i>
                                                </label>
                                                @*<input type="password" id="password" name="password">*@
                                                @Html.TextBoxFor(m => m.ConfirmPassword, new Dictionary<string, object>
                                                             () {
                                                                            {"id","txtUserpwd"},
                                                                            {"class","form-control rounded-left"},
                                                                            {"placeholder","Enter Confirm Password" },
                                                                            {"autocomplete","off"},
                                                                            {"type","password"},
                                                                            {"required","required"}
                                                                            })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="j-response"></div>
                                </div>
                                <div class="j-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
                <!-- Register your self card end -->
            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>
<script src="~/Content/AdminTemplateAssets/js/jquery.min.js"></script>
<script src="~/Content/AdminTemplateAssets/login_content/jquery.j-pro.js"></script>

<script>
    $(".toggle-password").click(function () {
        debugger
        $(this).toggleClass("fas fa-eye-slash");
        input = $(this).parent().find("input");
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });
</script>