@model BanasVehicleTrackViewModel.Master.ContractorMasterViewModel
@{
    ViewBag.Title = "AddContractorMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-12">
                <div class="float-left">
                    <h3><i class="ti-control-forward ForwardIcon"> </i>Contractor Master</h3>
                </div>
                <div class="float-right">
                    <a class="btn btn-outline-primary btn-round" href="@Url.Action("ViewContractorMaster","Master")">
                        <i class="fa fa-eye mx-2"></i>View Contractors
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-block">
                        @using (Html.BeginForm("AddContractorMaster", "Master", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken();

                            @Html.HiddenFor(m => m.Action)
                            @Html.HiddenFor(m => m.ContractorId, new { id = "txtRoleId" })
                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label class="col-form-label">Contractor Company Name</label>
                                @Html.ValidationMessageFor(m => m.ContractorCompanyName, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.ContractorCompanyName, new Dictionary<string, object>() {
                                      {"id","txtContractorCompanyName"},
                                      {"class","form-control"},
                                         {"autocomplete","off"},
                                      {"required","required"},
                                      {"placeholder","Enter Contractor Company Name"}
                                      })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">Contractor Vendor Code</label>
                                @Html.ValidationMessageFor(m => m.ContractorCode, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.ContractorCode, new Dictionary<string, object>() {
                                      {"id","txtContractorCode"},
                                      {"class","form-control"},
                                         {"autocomplete","off"},
                                      {"required","required"},
                                      {"placeholder","Enter Contractor Vendor Code"}
                                      })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">Contractor Name</label>
                                @Html.ValidationMessageFor(m => m.ContractorName, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.ContractorName, new Dictionary<string, object>() {
                                      {"id","txtContractorName"},
                                      {"class","form-control"},
                                         {"autocomplete","off"},
                                      {"required","required"},
                                      {"placeholder","Enter Contractor Name"}
                                      })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">Contact No</label>
                                @Html.ValidationMessageFor(m => m.Contactno, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.Contactno, new Dictionary<string, object>() {
                                      {"id","txtContactno"},
                                      {"class","form-control contacterror"},
                                         {"autocomplete","off"},
                                      {"required","required"},
                                      {"placeholder","Enter Contact Number"}
                                      })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">IsActive</label><br />

                                @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
                                @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                               {
                                   new SelectListItem{ Text="Enable", Value = "true",Selected=true },
                                   new SelectListItem{ Text="Disable", Value = "false" }
                                }, new { @class = "form-control form-select js-example-disabled-results", @id = "IsActive" })
                            </div>

                            <div class="col-lg-6">
                                <div class="mt-4">
                                    <input type="submit" class="btn btn-round btn-inverse m-2" id="confirmok" value="@Model.Action" onclick="return confirm('Are You sure you want to save data?')" />
                                    @if (Model.Action == "Save")
                                    {
                                        <input type="button" class="btn btn btn-round btn-inverse m-2" id="reload" value="Refresh" />
                                    }
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#reload').click(function () {

        window.location.href = "/Master/AddContractorMaster";
    });
</script>

