@model BanasVehicleTrackViewModel.PageViewModel

@{
    ViewBag.Title = "Page Master";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-12">
                <div class="float-left">
                    <h3><i class="ti-control-forward ForwardIcon"></i>Page Master</h3>
                </div>
                <div class="float-right">
                    <a class="btn btn-outline-primary btn-round" href="@Url.Action("AddPageMaster", "UserManagement")">
                        <i class="fa fa-plus mx-2"></i>Add Page
                    </a>
                </div>
            </div>

        </div>
    </div>
    <div class="card">
        <div class="card-block">
            <div class="dt-responsive table-responsive">
                <table id="base-style" class="table table-striped table-hover table-bordered nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Action")
                            </th>
                            <th>
                                @Html.DisplayName("Page")
                            </th>
                            <th>
                                @Html.DisplayName("Page Url")
                            </th>
                            <th>
                                @Html.DisplayName("Page Priority")
                            </th>
                            <th>
                                @Html.DisplayName("IsActive")
                            </th>
                            <th>
                                @Html.DisplayName("Create Date")
                            </th>
                            <th>
                                @Html.DisplayName("Create User")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PageMasterList)
                        {
                        <tr>
                            <td>
                                @if (ViewBag.UpdateRight == 1)
                                {
                                    @Html.ActionLink(" ", "EditPageMaster", new { id = item.PageId }, new { @class = " btn editbtn fa fa-pencil-square-o", title = "Edit" })
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PagePriority)
                            </td>
                            <td>
                                <label class="toggle">
                                    <input class="toggle-checkbox btnRoleDisable" type="checkbox" onclick='ActiveDeactiveStatusChange(this, "@item.PageId", "PageMaster")' @(item.IsActive == true ? "checked" : "")>
                                    <span class="toggle-switch"></span>
                                </label>
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.cdate)</td>
                            <td> @Html.DisplayFor(modelItem => item.CreateUser)</td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

