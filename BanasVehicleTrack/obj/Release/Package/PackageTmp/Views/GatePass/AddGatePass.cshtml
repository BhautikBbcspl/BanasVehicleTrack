@model BanasVehicleTrackViewModel.GatepassViewModel
@{
    ViewBag.Title = "AddGatePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-12">
            <div class="float-left">
                <h3><i class="ti-control-forward ForwardIcon"> </i>@Model.action Trip</h3>
            </div>
            <div class="float-right">

            </div>
        </div>

    </div>
</div>
@using (Html.BeginForm("AddGatePass", "GatePass", FormMethod.Post))
{
    @Html.AntiForgeryToken();


    <div class="page-body">
        @*<div class="row justify-content-center">*@
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">

                        <div class="card-header-right">
                            <a class="btn btn-outline-primary" href="@Url.Action("ViewGatepass","GatePass")">
                                <i class="fa fa-backward"></i>Back
                            </a>
                        </div>

                        </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card-block">
                                <h4 class="sub-title">@Model.action Trip</h4>
                                @*<div class="form-group row">
                                        <label class="col-sm-2 col-form-label">GatePass Id</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" value="@item.GatePassId" readonly="">
                                        </div>
                                    </div>*@
                                @Html.HiddenFor(m => m.action)
                                @Html.HiddenFor(m => m.GatePassId)
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Department</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.DepartmentId, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(x => x.DepartmentId, new SelectList(Model.DepartmentList, "DepartmentId", "DepartmentName"), "Select Department",
                                             new Dictionary<string, object>() {
                                                 {"id","ddlDepartment"},
                                                 { "class","form-control form-select js-example-disabled-results" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">User</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.UserCode, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(x => x.UserCode, new SelectList(Model.EmployeeList, "EmployeeCode", "EmployeeName"), "Select User",
                                             new Dictionary<string, object>() {
                                                 {"id","ddlEmployee"},
                                                 { "class","form-control form-select js-example-disabled-results" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Other User 1</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.OtherUser1, new Dictionary<string, object>() {
                                                  {"id","txtOtherUser1"},
                                                  {"class","form-control"},
                                                     {"autocomplete","off"},
                                                  })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Other User 2</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.OtherUser2, new Dictionary<string, object>() {
                                                       {"id","txtOtherUser2"},
                                                       {"class","form-control"},
                                                          {"autocomplete","off"},
                                                       })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Other User 3</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.OtherUser3, new Dictionary<string, object>() {
                                                      {"id","txtOtherUser3"},
                                                      {"class","form-control"},
                                                         {"autocomplete","off"},
                                                      })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Information Mode</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.InformationMode, new List<SelectListItem>
                                       {
                                           new SelectListItem{ Text="Telephonic", Value = "Telephonic",Selected=true },
                                           new SelectListItem{ Text="Personal", Value = "Personal" }
                                        }, new { @class = "form-control form-select js-example-disabled-results", @id = "InformationMode" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Visit Date & Time</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.VisitDateTime, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.VisitDateTime, new Dictionary<string, object>() {
                                                             {"id","txtVisitDateTime"},
                                                             {"class","form-control datetimepicker"},
                                                                {"autocomplete","off"},
                                                             })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Visit Purpose</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.VisitPurpose, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(x => x.VisitPurpose, new SelectList(Model.VisitPurposeList, "VisitId", "VisitPurpose"), "Select Visit Purpose",
                                             new Dictionary<string, object>() {
                                                 {"id","ddlVisitPurpose"},
                                                 { "class","form-control form-select js-example-disabled-results" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Remarks</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Remarks, new Dictionary<string, object>() {
                                                            {"id","txtRemarks"},
                                                            {"class","form-control"},
                                                               {"autocomplete","off"},
                                                            })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card-block">
                                <h4 class="sub-title">Vehicle Details</h4>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Vehicle Department
                                    </label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.VehicleDepartment, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(x => x.VehicleDepartment, new SelectList(Model.DepartmentList, "DepartmentId", "DepartmentName"), "Select Department",
                                             new Dictionary<string, object>() {
                                                 {"id","ddlVehicleDepartment"},
                                                 { "class","form-control form-select js-example-disabled-results" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Driver</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.Driver, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Driver, new Dictionary<string, object>() {
                                                             {"id","txtDriver"},
                                                             {"class","form-control "},
                                                                {"autocomplete","off"},
                                                             })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Vehicle Number</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.VehicleId, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(x => x.VehicleId, new SelectList(Model.VehicleList, "VehicleId", "VehicleRegNumber"), "Select Vehicle",
                                             new Dictionary<string, object>() {
                                                 {"id","ddlVehicle"},
                                                 { "class","form-control form-select js-example-disabled-results" },
                                             { "onchange", "javascript:GetOdometer(this.value)" }})
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Start Odometer</label>
                                    <div class="col-sm-10">
                                        @Html.ValidationMessageFor(m => m.StartOdometer, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.StartOdometer, new Dictionary<string, object>() {
                                                             {"id","txtStartOdometer"},
                                                             {"class","form-control numberdecimal"},
                                                                {"autocomplete","off"},
                                                             })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-round btn-inverse m-2" id="confirmok" value="Save" onclick="return confirm('Are You sure you want to save data?')" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

}
<script>
    function GetOdometer(_Vehicleid) {
        if (_Vehicleid == "") {
            _Vehicleid = 0;
            }
        if (_Vehicleid != 0) {
                var url = "@System.Configuration.ConfigurationManager.AppSettings["myKey"]" + "/GatePass/GetOdometer";
                $.ajax({
                    url: url,
                    data: { Vehicleid: _Vehicleid },
                    cache: false,
                    type: "POST",
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                       var page = data.odometer;
                        $('#txtStartOdometer').val(page);
                    },
                    error: function (data) {
                        $('#txtStartOdometer').val('');

                    }
                });
        }
        else {
            $('#txtStartOdometer').val('');

        }
        }
</script>