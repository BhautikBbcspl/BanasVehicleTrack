                error: function (reponse) {
                    var page = "<select id='ddlVehicle'>";
                    page = page + '<option value="">Select Vehicle</option>';
                    page = page + '</select>';
                    $('#ddlVehicle').html(page);
                }
            });
        }
        else {
            var page = "<select id='ddlVehicle'>";
            page = page + '<option value="">Select Vehicle</option>';
            page = page + '</select>';
            $('#ddlVehicle').html(page);
        }
    }
